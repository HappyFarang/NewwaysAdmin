@* File: NewwaysAdmin.WebAdmin/Components/Passwords/AddPasswordModal.razor *@

@using NewwaysAdmin.Shared.Services.Passwords

<div class="modal fade @(_isVisible ? "show d-block" : "")"
     tabindex="-1"
     style="background-color: rgba(0,0,0,0.5);">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Password</h5>
                <button type="button" class="btn-close" @onclick="Cancel"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Password for:</label>
                    <input type="text"
                           class="form-control"
                           placeholder="e.g., Bank login, Server SSH, WiFi router"
                           @bind="_label"
                           @bind:event="oninput" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Username:</label>
                    <input type="text"
                           class="form-control"
                           placeholder="Username or email"
                           @bind="_username"
                           @bind:event="oninput" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Password:</label>
                    <div class="input-group">
                        <input type="@(_showPassword ? "text" : "password")"
                               class="form-control"
                               placeholder="Enter password"
                               @bind="_password"
                               @bind:event="oninput" />
                        <button class="btn btn-outline-secondary"
                                type="button"
                                @onclick="TogglePasswordVisibility">
                            <i class="bi @(_showPassword ? "bi-eye-slash" : "bi-eye")"></i>
                        </button>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Note:</label>
                    <textarea class="form-control"
                              rows="2"
                              placeholder="Optional notes"
                              @bind="_note"
                              @bind:event="oninput"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Cancel">
                    Cancel
                </button>
                <button type="button"
                        class="btn btn-primary"
                        @onclick="Submit"
                        disabled="@(!CanSubmit)">
                    Add Password
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback<PasswordEntry> OnSave { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }

    private bool _isVisible = false;
    private string _label = string.Empty;
    private string _username = string.Empty;
    private string _password = string.Empty;
    private string _note = string.Empty;
    private bool _showPassword = false;

    private bool CanSubmit => !string.IsNullOrWhiteSpace(_label) && !string.IsNullOrWhiteSpace(_password);

    public void Show()
    {
        _label = string.Empty;
        _username = string.Empty;
        _password = string.Empty;
        _note = string.Empty;
        _showPassword = false;
        _isVisible = true;
        StateHasChanged();
    }

    public void Hide()
    {
        _isVisible = false;
        StateHasChanged();
    }

    private void TogglePasswordVisibility()
    {
        _showPassword = !_showPassword;
    }

    private async Task Submit()
    {
        if (!CanSubmit) return;

        var entry = new PasswordEntry
            {
                Label = _label.Trim(),
                Username = _username.Trim(),
                Password = _password,
                Note = _note.Trim()
            };

        await OnSave.InvokeAsync(entry);
        Hide();
    }

    private async Task Cancel()
    {
        Hide();
        await OnCancel.InvokeAsync();
    }
}