@* File: NewwaysAdmin.WebAdmin/Components/Features/Accounting/BankSlipProjects/Modals/ReviewModal.razor *@
@using NewwaysAdmin.SharedModels.BankSlips
@using NewwaysAdmin.WebAdmin.Services.BankSlips.Processing
@using NewwaysAdmin.WebAdmin.Services.Categories
@inject BankSlipProjectService ProjectService
@inject CategoryService CategoryService
@inject ILogger<ReviewModal> Logger

@if (isVisible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-pencil-square me-2"></i>Review Project
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="Close"></button>
                </div>

                <div class="modal-body">
                    @if (project == null)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary"></div>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            @* Left: Image preview *@
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body text-center p-2">
                                        @if (!string.IsNullOrEmpty(imagePreviewUrl))
                                        {
                                            <img src="@imagePreviewUrl" class="img-fluid rounded" style="max-height: 300px;" alt="Bank Slip" />
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded p-5">
                                                <i class="bi bi-image display-4 text-muted"></i>
                                                <p class="text-muted small mt-2">No preview</p>
                                            </div>
                                        }
                                        <button class="btn btn-sm btn-outline-primary mt-2" @onclick="ViewFullImage">
                                            <i class="bi bi-zoom-in"></i> View Full
                                        </button>
                                    </div>
                                </div>

                                @* Project ID *@
                                <div class="small text-muted mt-2 text-break">
                                    <strong>ID:</strong> @project.ProjectId
                                </div>
                            </div>

                            @* Right: Details *@
                            <div class="col-md-8">
                                @* Transaction Info (read-only) *@
                                <div class="card mb-3">
                                    <div class="card-header py-2">
                                        <i class="bi bi-info-circle me-1"></i>Transaction Details
                                    </div>
                                    <div class="card-body py-2">
                                        <div class="row g-2">
                                            <div class="col-6">
                                                <small class="text-muted">Date/Time</small>
                                                <div>@project.TransactionTimestamp.ToString("yyyy/MM/dd HH:mm:ss")</div>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Amount</small>
                                                <div class="fw-bold text-success">@project.GetTotal() ฿</div>
                                            </div>
                                            <div class="col-12">
                                                <small class="text-muted">To</small>
                                                <div>@project.GetRecipient()</div>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Pattern</small>
                                                <div><span class="badge bg-info text-dark">@project.PatternSetName</span></div>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">User</small>
                                                <div>@project.Username</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @* Category & VAT (editable) *@
                                <div class="card mb-3">
                                    <div class="card-header py-2">
                                        <i class="bi bi-tag me-1"></i>Category & VAT
                                    </div>
                                    <div class="card-body py-2">
                                        <div class="row g-2">
                                            <div class="col-6">
                                                <label class="form-label small mb-1">Category</label>
                                                <select class="form-select form-select-sm" @bind="editCategory">
                                                    <option value="">— Select —</option>
                                                    @foreach (var cat in categories)
                                                    {
                                                        <option value="@cat.Name">@cat.Name</option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-6">
                                                <label class="form-label small mb-1">SubCategory</label>
                                                <select class="form-select form-select-sm" @bind="editSubCategory" disabled="@(string.IsNullOrEmpty(editCategory))">
                                                    <option value="">— Select —</option>
                                                    @foreach (var sub in GetSubCategories(editCategory))
                                                    {
                                                        <option value="@sub">@sub</option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-12">
                                                <label class="form-label small mb-1">VAT Status</label>
                                                <div class="btn-group w-100" role="group">
                                                    <input type="radio" class="btn-check" name="vat" id="vatYes"
                                                           checked="@(editHasVat == true)" @onchange="() => editHasVat = true" />
                                                    <label class="btn btn-outline-success btn-sm" for="vatYes">
                                                        <i class="bi bi-check"></i> VAT
                                                    </label>

                                                    <input type="radio" class="btn-check" name="vat" id="vatNo"
                                                           checked="@(editHasVat == false)" @onchange="() => editHasVat = false" />
                                                    <label class="btn btn-outline-secondary btn-sm" for="vatNo">
                                                        <i class="bi bi-x"></i> No VAT
                                                    </label>

                                                    <input type="radio" class="btn-check" name="vat" id="vatUnknown"
                                                           checked="@(editHasVat == null)" @onchange="() => editHasVat = null" />
                                                    <label class="btn btn-outline-warning btn-sm" for="vatUnknown">
                                                        <i class="bi bi-question"></i> Unknown
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <label class="form-label small mb-1">Memo</label>
                                                <input type="text" class="form-control form-control-sm" @bind="editMemo"
                                                       placeholder="Additional notes..." />
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @* Status Flags *@
                                <div class="card mb-3">
                                    <div class="card-header py-2">
                                        <i class="bi bi-flag me-1"></i>Status
                                    </div>
                                    <div class="card-body py-2">
                                        <div class="row g-2">
                                            <div class="col-6">
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" id="isPrivate" @bind="editIsPrivate" />
                                                    <label class="form-check-label" for="isPrivate">
                                                        <i class="bi bi-lock text-secondary"></i> Private Transaction
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" id="hasBill" @bind="editHasBill" />
                                                    <label class="form-check-label" for="hasBill">
                                                        <i class="bi bi-receipt text-success"></i> Has Bill
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @* Attached Bills *@
                                        <div class="mt-3">
                                            <label class="form-label small mb-1">
                                                Attached Bills (@project.BillFileReferences.Count)
                                            </label>
                                            @if (project.BillFileReferences.Count > 0)
                                            {
                                                <div class="d-flex flex-wrap gap-1">
                                                    @foreach (var bill in project.BillFileReferences)
                                                    {
                                                        <span class="badge bg-success">
                                                            <i class="bi bi-file-image"></i> @Path.GetFileName(bill)
                                                        </span>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="text-muted small">No bills attached yet</div>
                                            }
                                            <button class="btn btn-sm btn-outline-success mt-2" disabled title="Coming soon">
                                                <i class="bi bi-upload"></i> Upload Bill
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="Close">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-primary" @onclick="SaveAsync" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        <i class="bi bi-check me-1"></i>Save
                    </button>
                    <button type="button" class="btn btn-success" @onclick="SaveAndCloseAsync" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        <i class="bi bi-check-all me-1"></i>Save & Close
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public EventCallback<BankSlipProject> OnSaved { get; set; }

    private bool isVisible = false;
    private bool isSaving = false;
    private BankSlipProject? project;
    private string? imagePreviewUrl;

    // Edit fields
    private string editCategory = "";
    private string editSubCategory = "";
    private bool? editHasVat;
    private string editMemo = "";
    private bool editIsPrivate;
    private bool editHasBill;

    // Category data
    private List<CategoryInfo> categories = new();

    public async Task OpenAsync(BankSlipProject projectToEdit)
    {
        project = projectToEdit;
        isVisible = true;

        // Load categories from service
        await LoadCategoriesAsync();

        // Initialize edit fields
        editCategory = project.StructuredMemo?.CategoryName ?? "";
        editSubCategory = project.StructuredMemo?.SubCategoryName ?? "";
        editHasVat = project.HasVat;
        editMemo = project.StructuredMemo?.Memo ?? "";
        editIsPrivate = project.IsPrivate;
        editHasBill = project.HasBill;

        // TODO: Generate image preview URL from .bin file
        imagePreviewUrl = null;

        StateHasChanged();
    }

    private async Task LoadCategoriesAsync()
    {
        try
        {
            var data = await CategoryService.GetFullDataAsync();
            categories = data.Categories.Select(c => new CategoryInfo
                {
                    Name = c.Name,
                    SubCategories = c.SubCategories.Select(s => s.Name).ToList()
                }).ToList();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading categories");
        }
    }

    private List<string> GetSubCategories(string categoryName)
    {
        if (string.IsNullOrEmpty(categoryName))
            return new List<string>();

        var cat = categories.FirstOrDefault(c => c.Name == categoryName);
        return cat?.SubCategories ?? new List<string>();
    }

    private void Close()
    {
        isVisible = false;
        project = null;
        StateHasChanged();
    }

    private async Task SaveAsync()
    {
        await SaveProjectAsync(closeProject: false);
    }

    private async Task SaveAndCloseAsync()
    {
        await SaveProjectAsync(closeProject: true);
    }

    private async Task SaveProjectAsync(bool closeProject)
    {
        if (project == null) return;

        isSaving = true;
        StateHasChanged();

        try
        {
            // Update project from edit fields
            project.StructuredMemo ??= new ParsedMemo();
            project.StructuredMemo.CategoryName = string.IsNullOrEmpty(editCategory) ? null : editCategory;
            project.StructuredMemo.SubCategoryName = string.IsNullOrEmpty(editSubCategory) ? null : editSubCategory;
            project.StructuredMemo.Memo = string.IsNullOrEmpty(editMemo) ? null : editMemo;

            project.HasVat = editHasVat;
            project.IsPrivate = editIsPrivate;
            project.HasBill = editHasBill;

            // Update structural note flag if we now have category info
            project.HasStructuralNote = !string.IsNullOrEmpty(project.StructuredMemo.CategoryName);

            if (closeProject)
            {
                project.IsClosed = true;
                await ProjectService.CloseProjectAsync(project.ProjectId);
            }
            else
            {
                await ProjectService.UpdateProjectAsync(project);
            }

            await OnSaved.InvokeAsync(project);

            Logger.LogInformation("Saved project: {ProjectId} (closed: {Closed})", project.ProjectId, closeProject);

            Close();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving project");
            // TODO: Show error to user
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private void ViewFullImage()
    {
        // TODO: Open image viewer modal
        Logger.LogInformation("View full image requested for: {ProjectId}", project?.ProjectId);
    }
}
