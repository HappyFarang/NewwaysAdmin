@* File: NewwaysAdmin.WebAdmin/Components/Pages/Workers/Components/ActiveWorkersCard.razor *@
@* Purpose: Display table for active (currently signed in) workers *@

@using NewwaysAdmin.WebAdmin.Models.Workers
@using NewwaysAdmin.WorkerAttendance.Models

<div class="card mb-4">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">
            <span class="bi bi-check-circle me-2"></span>
            Active Workers (@Workers.Count)
        </h5>
    </div>
    <div class="card-body p-0">
        <WorkerTable 
            Workers="@Workers" 
            IsActive="true"
            HeaderClass="table-success"
            EmptyMessage="No workers are currently signed in." />
    </div>
</div>

@code {
    [Parameter]
    public List<WorkerStatus> Workers { get; set; } = new();
}