@* File: NewwaysAdmin.WebAdmin/Components/Pages/Workers/Components/ActiveWorkersCard.razor *@
@* Purpose: Display card for active (currently signed in) workers *@

@using NewwaysAdmin.WebAdmin.Models.Workers
@using NewwaysAdmin.WorkerAttendance.Models

<div class="card mb-4">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">
            <span class="bi bi-check-circle me-2"></span>
            Active Workers (@Workers.Count)
        </h5>
    </div>
    <div class="card-body">
        @if (Workers.Any())
        {
            <div class="row g-3">
                @foreach (var worker in Workers)
                {
                    <div class="col-md-6 col-lg-4">
                        <WorkerCard Worker="@worker" IsActive="true" />
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted mb-0">
                <span class="bi bi-info-circle me-2"></span>
                No workers are currently signed in.
            </p>
        }
    </div>
</div>

@code {
    [Parameter]
    public List<WorkerStatus> Workers { get; set; } = new();
}