@* File: NewwaysAdmin.WebAdmin/Components/Pages/Workers/Components/InactiveWorkersCard.razor *@
@* Purpose: Display table for inactive (signed out) workers *@

@using NewwaysAdmin.WebAdmin.Models.Workers

<div class="card">
    <div class="card-header bg-secondary text-white">
        <h5 class="mb-0">
            <span class="bi bi-dash-circle me-2"></span>
            Inactive Workers (@Workers.Count)
        </h5>
    </div>
    <div class="card-body p-0">
        <WorkerTable 
            Workers="@Workers" 
            IsActive="false"
            HeaderClass="table-light"
            EmptyMessage="No inactive workers for today." />
    </div>
</div>

@code {
    [Parameter]
    public List<WorkerStatus> Workers { get; set; } = new();
}