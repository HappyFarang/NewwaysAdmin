@* File: NewwaysAdmin.WebAdmin/Components/Pages/Workers/Components/WorkerWeeklyTable.razor *@
@* Purpose: Weekly breakdown table showing daily work hours and payment with adjustment support *@

@using NewwaysAdmin.WebAdmin.Models.Workers
@using NewwaysAdmin.WebAdmin.Services.Workers
@using NewwaysAdmin.WebAdmin.Services.Auth
@inject WorkerColumnPreferencesService PreferencesService
@inject IAuthenticationService AuthService
@inject AdjustmentService AdjustmentService
@inject WorkerWeeklyService WeeklyService

<div class="card">
    <div class="card-header bg-primary text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <span class="bi bi-calendar-week me-2"></span>
                Weekly Breakdown
                @if (WeeklyData?.HasAdjustments == true)
                {
                    <span class="badge bg-warning text-dark ms-2" title="This week has @WeeklyData.TotalAdjustmentsMade adjustment(s)">
                        <i class="bi bi-gear-fill me-1"></i>@WeeklyData.TotalAdjustmentsMade
                    </span>
                }
            </h5>
            <div class="btn-group btn-group-sm" role="group">
                @for (int i = 0; i < 8; i++)
                {
                    var weeksAgo = i;
                    var weekDate = GetWeekStartDate(weeksAgo);
                    var weekNumber = GetWeekNumber(weekDate);
                    var isCurrentWeek = weeksAgo == SelectedWeekOffset;

                    <button type="button"
                            class="btn @(isCurrentWeek ? "btn-light" : "btn-outline-light")"
                            @onclick="() => OnWeekSelected.InvokeAsync(weeksAgo)">
                        @weekNumber
                    </button>
                }
            </div>
        </div>
    </div>

    <!-- Column Toggle Buttons -->
    <ColumnToggleButtons ColumnVisibility="@_columnVisibility"
                         OnColumnVisibilityChanged="@HandleColumnVisibilityChanged" />

    <div class="card-body p-0">
        @if (WeeklyData != null)
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Day</th>
                            <th>Date</th>
                            @if (_columnVisibility.NormalSignIn)
                            {
                                <th class="text-center">Normal In</th>
                            }
                            @if (_columnVisibility.NormalSignOut)
                            {
                                <th class="text-center">Normal Out</th>
                            }
                            @if (_columnVisibility.OTSignIn)
                            {
                                <th class="text-center">OT In</th>
                            }
                            @if (_columnVisibility.OTSignOut)
                            {
                                <th class="text-center">OT Out</th>
                            }
                            @if (_columnVisibility.WorkHours)
                            {
                                <th class="text-center">Work Hours</th>
                            }
                            @if (_columnVisibility.OTHours)
                            {
                                <th class="text-center">OT Hours</th>
                            }
                            @if (_columnVisibility.Variance)
                            {
                                <th class="text-center">Variance</th>
                            }
                            @if (_columnVisibility.OnTime)
                            {
                                <th class="text-center">On Time</th>
                            }
                            @if (_columnVisibility.DailyPay)
                            {
                                <th class="text-end">Daily Pay</th>
                            }
                            @if (_columnVisibility.NormalPay)
                            {
                                <th class="text-end">
                                    <i class="bi bi-cash me-1"></i>Normal Pay
                                </th>
                            }
                            @if (_columnVisibility.OTPay)
                            {
                                <th class="text-end">
                                    <i class="bi bi-clock-fill me-1"></i>OT Pay
                                </th>
                            }
                            <!-- NEW: Adjustment column -->
                            <th class="text-center">
                                <i class="bi bi-gear me-1"></i>Adjust
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var day in WeeklyData.DailyRecords)
                        {
                            var isPastDay = day.Date <= DateTime.Today;
                            var rowClass = day.HasData ? (day.HasAdjustments ? "table-warning-subtle" : "") : "table-secondary text-muted";

                            <tr class="@rowClass">
                                <td>
                                    <strong>@day.Date.DayOfWeek</strong>
                                    @if (day.HasAdjustments)
                                    {
                                        <i class="bi bi-gear-fill text-warning ms-1" title="@day.AdjustmentTooltip"></i>
                                    }
                                </td>
                                <td>@day.Date.ToString("MMM dd")</td>

                                @if (_columnVisibility.NormalSignIn)
                                {
                                    <td class="text-center">@day.DisplaySignInFormatted</td>
                                }
                                @if (_columnVisibility.NormalSignOut)
                                {
                                    <td class="text-center">@day.DisplaySignOutFormatted</td>
                                }
                                @if (_columnVisibility.OTSignIn)
                                {
                                    <td class="text-center">@day.OTSignInFormatted</td>
                                }
                                @if (_columnVisibility.OTSignOut)
                                {
                                    <td class="text-center">@day.OTSignOutFormatted</td>
                                }
                                @if (_columnVisibility.WorkHours)
                                {
                                    <td class="text-center">@(day.HasData ? day.DisplayWorkHours.ToString("F1") : "--")</td>
                                }
                                @if (_columnVisibility.OTHours)
                                {
                                    <td class="text-center">@(day.HasData ? day.DisplayOTHours.ToString("F1") : "--")</td>
                                }
                                @if (_columnVisibility.Variance)
                                {
                                    <td class="text-center @GetVarianceClass(day.DisplayVarianceMinutes)">@(day.HasData ? day.DisplayVarianceFormatted : "--")</td>
                                }
                                @if (_columnVisibility.OnTime)
                                {
                                    <td class="text-center">
                                        @if (day.HasData)
                                        {
                                            @if (day.DisplayOnTime)
                                            {
                                                <span class="badge bg-success">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">Late @day.DisplayLateMinutes min</span>
                                            }
                                        }
                                        else
                                        {
                                            <text>--</text>
                                        }
                                    </td>
                                }
                                @if (_columnVisibility.DailyPay)
                                {
                                    <td class="text-end">@(day.HasData ? day.DailyPay.ToString("F2") + " ฿" : "--")</td>
                                }
                                @if (_columnVisibility.NormalPay)
                                {
                                    <td class="text-end">
                                        @(day.HasData && HasNormalActivity(day) ? CalculateNormalPay(day).ToString("F2") + " ฿" : "--")
                                    </td>
                                }
                                @if (_columnVisibility.OTPay)
                                {
                                    <td class="text-end">
                                        @(day.HasData ? CalculateOTPay(day.DisplayOTHours).ToString("F2") + " ฿" : "--")
                                    </td>
                                }
                                <!-- NEW: Adjustment button column -->
                                <td class="text-center">
                                    <AdjustmentButton DailyRecord="@day"
                                                      OnAdjustmentClick="@HandleAdjustmentClick" />
                                </td>
                            </tr>
                        }

                        <!-- Week Total Row -->
                        <tr class="table-info fw-bold">
                            <td colspan="2">WEEK TOTAL</td>
                            @if (_columnVisibility.NormalSignIn)
                            {
                                <td class="text-center">--</td>
                            }
                            @if (_columnVisibility.NormalSignOut)
                            {
                                <td class="text-center">--</td>
                            }
                            @if (_columnVisibility.OTSignIn)
                            {
                                <td class="text-center">--</td>
                            }
                            @if (_columnVisibility.OTSignOut)
                            {
                                <td class="text-center">--</td>
                            }
                            @if (_columnVisibility.WorkHours)
                            {
                                <td class="text-center">@WeeklyData.TotalWorkHours.ToString("F1")</td>
                            }
                            @if (_columnVisibility.OTHours)
                            {
                                <td class="text-center">@WeeklyData.TotalOTHours.ToString("F1")</td>
                            }
                            @if (_columnVisibility.Variance)
                            {
                                <td class="text-center">--</td>
                            }
                            @if (_columnVisibility.OnTime)
                            {
                                <td class="text-center">--</td>
                            }
                            @if (_columnVisibility.DailyPay)
                            {
                                <td class="text-end">@WeeklyData.TotalPay.ToString("F2") ฿</td>
                            }
                            @if (_columnVisibility.NormalPay)
                            {
                                <td class="text-end">@CalculateWeeklyNormalPay().ToString("F2") ฿</td>
                            }
                            @if (_columnVisibility.OTPay)
                            {
                                <td class="text-end">@CalculateWeeklyOTPay().ToString("F2") ฿</td>
                            }
                            <!-- Adjustment column total -->
                            <td class="text-center">
                                @if (WeeklyData.HasAdjustments)
                                {
                                    <span class="badge bg-info">@WeeklyData.TotalAdjustmentsMade</span>
                                }
                                else
                                {
                                    <text>--</text>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- NEW: Adjustment Summary -->
            @if (WeeklyData.HasAdjustments)
            {
                <div class="card-footer">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        <strong>Adjustments:</strong> @string.Join(", ", WeeklyData.AdjustmentSummary)
                    </small>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Loading weekly data...</p>
            </div>
        }
    </div>
</div>

<!-- NEW: Adjustment Modal -->
<AdjustmentModal @ref="_adjustmentModal"
                 OnAdjustmentApplied="@HandleAdjustmentApplied" />

@code {
    [Parameter] public WorkerWeeklyData? WeeklyData { get; set; }
    [Parameter] public int SelectedWeekOffset { get; set; }
    [Parameter] public EventCallback<int> OnWeekSelected { get; set; }
    [Parameter] public EventCallback<WorkerWeeklyData> OnWeeklyDataUpdated { get; set; }

    private WeeklyTableColumnVisibility _columnVisibility = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadUserColumnPreferences();
    }

    // === NEW: ADJUSTMENT HANDLING ===
    private AdjustmentModal? _adjustmentModal;

    private async Task HandleAdjustmentClick(DailyWorkRecord day)
    {
        if (_adjustmentModal != null && WeeklyData?.SettingsSnapshot != null)
        {
            await _adjustmentModal.ShowAsync(day, WeeklyData.SettingsSnapshot);
        }
    }

    private async Task HandleAdjustmentApplied(DailyWorkRecord adjustedDay)
    {
        if (WeeklyData == null) return;

        try
        {
            Console.WriteLine($"[WorkerWeeklyTable] HandleAdjustmentApplied called for {adjustedDay.Date:yyyy-MM-dd}");
            Console.WriteLine($"[WorkerWeeklyTable] Adjusted day - HasAdjustments: {adjustedDay.HasAdjustments}, WorkHours: {adjustedDay.WorkHours}, OTHours: {adjustedDay.OTHours}");

            // Update the day in the weekly data
            var existingDay = WeeklyData.DailyRecords.FirstOrDefault(d => d.Date.Date == adjustedDay.Date.Date);
            if (existingDay != null)
            {
                var index = WeeklyData.DailyRecords.IndexOf(existingDay);
                WeeklyData.DailyRecords[index] = adjustedDay;
                Console.WriteLine($"[WorkerWeeklyTable] Updated day at index {index}");
            }
            else
            {
                Console.WriteLine($"[WorkerWeeklyTable] ERROR: Could not find existing day for {adjustedDay.Date:yyyy-MM-dd}");
                return;
            }

            // Recalculate weekly totals
            WeeklyData.RecalculateWeeklyTotals();
            Console.WriteLine($"[WorkerWeeklyTable] Recalculated totals - TotalAdjustments: {WeeklyData.TotalAdjustmentsMade}");

            // Save the updated weekly data
            await WeeklyService.SaveWeeklyDataAsync(WeeklyData);
            Console.WriteLine($"[WorkerWeeklyTable] Saved weekly data to storage");

            // Notify parent component of the update
            await OnWeeklyDataUpdated.InvokeAsync(WeeklyData);
            Console.WriteLine($"[WorkerWeeklyTable] Notified parent component");

            // Close the modal
            _adjustmentModal?.CloseModal();

            // Refresh the display
            StateHasChanged();
            Console.WriteLine($"[WorkerWeeklyTable] StateHasChanged called");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[WorkerWeeklyTable] Error handling adjustment: {ex.Message}");
            Console.WriteLine($"[WorkerWeeklyTable] Stack trace: {ex.StackTrace}");
        }
    }

    // === EXISTING METHODS ===
    private async Task LoadUserColumnPreferences()
    {
        try
        {
            var currentSession = await AuthService.GetCurrentSessionAsync();
            if (currentSession != null)
            {
                _columnVisibility = await PreferencesService.GetUserColumnPreferencesAsync(currentSession.Username);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading column preferences: {ex.Message}");
        }
    }

    private async Task HandleColumnVisibilityChanged(WeeklyTableColumnVisibility newVisibility)
    {
        _columnVisibility = newVisibility;

        try
        {
            var currentSession = await AuthService.GetCurrentSessionAsync();
            if (currentSession != null)
            {
                await PreferencesService.SaveUserColumnPreferencesAsync(currentSession.Username, _columnVisibility);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving column preferences: {ex.Message}");
        }

        StateHasChanged();
    }

    private bool HasNormalActivity(DailyWorkRecord day)
    {
        return day.NormalSignIn.HasValue;
    }

    private decimal CalculateNormalPay(DailyWorkRecord day)
    {
        if (WeeklyData?.SettingsSnapshot == null) return 0;
        return HasNormalActivity(day) ? WeeklyData.SettingsSnapshot.DailyPayRate : 0;
    }

    private decimal CalculateOTPay(decimal otHours)
    {
        if (WeeklyData?.SettingsSnapshot == null) return 0;
        return Math.Round(otHours, 0) * WeeklyData.SettingsSnapshot.OvertimeHourlyRate;
    }

    private decimal CalculateWeeklyNormalPay()
    {
        if (WeeklyData?.SettingsSnapshot == null) return 0;
        return WeeklyData.DailyRecords
            .Where(d => d.HasData && HasNormalActivity(d))
            .Sum(d => CalculateNormalPay(d));
    }

    private decimal CalculateWeeklyOTPay()
    {
        if (WeeklyData?.SettingsSnapshot == null) return 0;
        return WeeklyData.DailyRecords
            .Where(d => d.HasData)
            .Sum(d => CalculateOTPay(d.OTHours));
    }

    private DateTime GetWeekStartDate(int weeksAgo)
    {
        var today = DateTime.Today;
        var daysSinceSunday = (int)today.DayOfWeek;
        var lastSunday = today.AddDays(-daysSinceSunday);
        return lastSunday.AddDays(-7 * weeksAgo);
    }

    private int GetWeekNumber(DateTime date)
    {
        var culture = System.Globalization.CultureInfo.CurrentCulture;
        var calendar = culture.Calendar;
        var calendarWeekRule = culture.DateTimeFormat.CalendarWeekRule;
        var firstDayOfWeek = culture.DateTimeFormat.FirstDayOfWeek;
        return calendar.GetWeekOfYear(date, calendarWeekRule, firstDayOfWeek);
    }

    private string GetVarianceClass(int varianceMinutes)
    {
        if (varianceMinutes > 0) return "text-success";
        if (varianceMinutes < 0) return "text-danger";
        return "";
    }
}

