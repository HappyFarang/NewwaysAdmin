<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NewwaysAdmin.Mobile"
             xmlns:converters="clr-namespace:NewwaysAdmin.Mobile.Features.BankSlipReview.Converters"
             x:Class="NewwaysAdmin.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <!-- Bank Slip Review Converters -->
                <converters:FilterButtonColorConverter x:Key="FilterButtonColorConverter"/>
                <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
                <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
                <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
