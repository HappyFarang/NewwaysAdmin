<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NewwaysAdmin.Mobile"
             xmlns:converters="clr-namespace:NewwaysAdmin.Mobile.Converters"
             x:Class="NewwaysAdmin.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Value Converters -->
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:BoolToOnlineStatusConverter x:Key="BoolToOnlineStatusConverter" />
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
            <converters:SelectedLocationBackgroundConverter x:Key="SelectedLocationBackgroundConverter" />
            <converters:ObjectNotNullConverter x:Key="ObjectNotNullConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
