<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NewwaysAdmin.Mobile"
             xmlns:reviewConverters="clr-namespace:NewwaysAdmin.Mobile.Features.BankSlipReview.Converters"
             x:Class="NewwaysAdmin.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Bank Slip Review Converters -->
            <reviewConverters:FilterButtonColorConverter x:Key="FilterButtonColorConverter"/>
            <reviewConverters:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <reviewConverters:NullToBoolConverter x:Key="NullToBoolConverter"/>
            <reviewConverters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <reviewConverters:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter"/>
            <reviewConverters:BoolToSaveButtonColorConverter x:Key="BoolToSaveButtonColorConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>