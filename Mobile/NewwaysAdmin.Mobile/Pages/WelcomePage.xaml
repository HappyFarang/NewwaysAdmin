<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="NewwaysAdmin.Mobile.Pages.WelcomePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:NewwaysAdmin.Mobile.Components"
             Title="Welcome"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <!-- Navigation Header -->
        <components:NavigationHeader Grid.Row="0" Title="Welcome" />

        <!-- Welcome content -->
        <Grid Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
            <StackLayout Spacing="20">

                <Label Text="Welcome"
                       FontSize="32"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                <Label Text="Tap the header to access menu"
                       FontSize="14"
                       HorizontalOptions="Center"
                       TextColor="Gray"
                       Margin="0,20,0,0" />

            </StackLayout>
        </Grid>

    </Grid>

</ContentPage>