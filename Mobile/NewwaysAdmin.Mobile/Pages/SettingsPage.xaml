<?xml version="1.0" encoding="utf-8" ?>
<!-- File: Mobile/NewwaysAdmin.Mobile/Pages/SettingsPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewwaysAdmin.Mobile.Pages.SettingsPage"
             Title="Settings">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">

        <!-- Header -->
        <StackLayout Grid.Row="0">
            <Label Text="⚙️ Settings" 
                   FontSize="28" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   Margin="0,10,0,20"/>

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,0,0,20"/>
        </StackLayout>

        <!-- Settings Options -->
        <StackLayout Grid.Row="1" Spacing="15">

            <!-- User Info -->
            <Frame BackgroundColor="#F5F5F5" Padding="15" CornerRadius="10">
                <StackLayout>
                    <Label Text="Logged in as:" FontSize="14" TextColor="Gray"/>
                    <Label Text="{Binding Username}" FontSize="18" FontAttributes="Bold"/>
                    <Label Text="{Binding ServerUrl}" FontSize="12" TextColor="Gray"/>
                </StackLayout>
            </Frame>

            <!-- App Info -->
            <Frame BackgroundColor="#F5F5F5" Padding="15" CornerRadius="10">
                <StackLayout>
                    <Label Text="App Version" FontSize="14" TextColor="Gray"/>
                    <Label Text="1.0.0" FontSize="16"/>
                </StackLayout>
            </Frame>

            <!-- Future settings go here -->
            <!--
            <Frame BackgroundColor="#F5F5F5" Padding="15" CornerRadius="10">
                <StackLayout>
                    <Label Text="Sync Settings" FontSize="16" FontAttributes="Bold"/>
                    <Label Text="Auto-sync: Enabled" FontSize="14"/>
                </StackLayout>
            </Frame>
            -->

        </StackLayout>

        <!-- Logout Button at bottom -->
        <Button Grid.Row="2"
                Text="🚪 Sign Out"
                Command="{Binding LogoutCommand}"
                BackgroundColor="#E53935"
                TextColor="White"
                FontSize="18"
                HeightRequest="50"
                CornerRadius="10"
                Margin="0,20,0,0"/>

    </Grid>
</ContentPage>