<?xml version="1.0" encoding="utf-8" ?>
<!-- File: Mobile/NewwaysAdmin.Mobile/Pages/Categories/CategoryManagementPage.xaml -->
<ContentPage x:Class="NewwaysAdmin.Mobile.Pages.Categories.CategoryManagementPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Manage Categories"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <!-- Header bar -->
        <Grid Grid.Row="0" Padding="10,12" BackgroundColor="#512BD4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Text="← Back"
                    Command="{Binding GoBackCommand}"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="14"
                    Padding="5,0" />

            <Label Grid.Column="1" 
                   Text="Edit Categories" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <Label Grid.Column="2"
                   Text="{Binding SyncStatusText}"
                   FontSize="11"
                   TextColor="#E0E0E0"
                   VerticalOptions="Center"
                   Margin="0,0,5,0" />
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1" BackgroundColor="#F5F5F5">
            <StackLayout Padding="15" Spacing="15">

                <!-- PERSONS SECTION -->
                <Frame Padding="0" CornerRadius="10" HasShadow="True" BackgroundColor="White">
                    <StackLayout Spacing="0">
                        <Grid Padding="15,12" BackgroundColor="#E8F5E9">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" 
                                   Text="👤 Persons" 
                                   FontSize="16" 
                                   FontAttributes="Bold"
                                   TextColor="#2E7D32" />
                            <Button Grid.Column="1"
                                    Text="+ Add"
                                    Command="{Binding AddPersonCommand}"
                                    BackgroundColor="#4CAF50"
                                    TextColor="White"
                                    FontSize="12"
                                    CornerRadius="15"
                                    Padding="12,6"
                                    HeightRequest="32" />
                        </Grid>

                        <StackLayout BindableLayout.ItemsSource="{Binding Persons}" Padding="10,5">
                            <BindableLayout.EmptyView>
                                <Label Text="No persons yet. Add one!" TextColor="#999" HorizontalOptions="Center" Margin="20" />
                            </BindableLayout.EmptyView>
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Frame Padding="12,10" Margin="0,3" CornerRadius="6" BackgroundColor="#FAFAFA" HasShadow="False">
                                        <Label Text="{Binding Name}" FontSize="14" TextColor="#333" />
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <!-- LOCATIONS SECTION -->
                <Frame Padding="0" CornerRadius="10" HasShadow="True" BackgroundColor="White">
                    <StackLayout Spacing="0">
                        <Grid Padding="15,12" BackgroundColor="#E3F2FD">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" 
                                   Text="📍 Locations" 
                                   FontSize="16" 
                                   FontAttributes="Bold"
                                   TextColor="#1565C0" />
                            <Button Grid.Column="1"
                                    Text="+ Add"
                                    Command="{Binding AddLocationCommand}"
                                    BackgroundColor="#2196F3"
                                    TextColor="White"
                                    FontSize="12"
                                    CornerRadius="15"
                                    Padding="12,6"
                                    HeightRequest="32" />
                        </Grid>

                        <StackLayout BindableLayout.ItemsSource="{Binding Locations}" Padding="10,5">
                            <BindableLayout.EmptyView>
                                <Label Text="No locations yet. Add one!" TextColor="#999" HorizontalOptions="Center" Margin="20" />
                            </BindableLayout.EmptyView>
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Frame Padding="12,10" Margin="0,3" CornerRadius="6" BackgroundColor="#FAFAFA" HasShadow="False">
                                        <Label Text="{Binding Name}" FontSize="14" TextColor="#333" />
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <!-- CATEGORIES SECTION - Simple for now -->
                <Frame Padding="0" CornerRadius="10" HasShadow="True" BackgroundColor="White">
                    <StackLayout Spacing="0">
                        <Grid Padding="15,12" BackgroundColor="#FFF3E0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" 
                                   Text="📁 Categories" 
                                   FontSize="16" 
                                   FontAttributes="Bold"
                                   TextColor="#E65100" />
                            <Button Grid.Column="1"
                                    Text="+ Add"
                                    Command="{Binding AddCategoryCommand}"
                                    BackgroundColor="#FF9800"
                                    TextColor="White"
                                    FontSize="12"
                                    CornerRadius="15"
                                    Padding="12,6"
                                    HeightRequest="32" />
                        </Grid>

                        <StackLayout BindableLayout.ItemsSource="{Binding Categories}" Padding="10,5">
                            <BindableLayout.EmptyView>
                                <Label Text="No categories yet. Add one!" TextColor="#999" HorizontalOptions="Center" Margin="20" />
                            </BindableLayout.EmptyView>
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Frame Padding="0" Margin="0,4" CornerRadius="8" BackgroundColor="#FFF8E1" HasShadow="False">
                                        <StackLayout Spacing="0">

                                            <!-- Category Header (tappable) -->
                                            <Grid Padding="12,10" ColumnDefinitions="Auto,*,Auto">
                                                <Grid.GestureRecognizers>
                                                    <TapGestureRecognizer 
                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ToggleCategoryCommand}"
                        CommandParameter="{Binding .}" />
                                                </Grid.GestureRecognizers>

                                                <!-- Expand icon -->
                                                <Label Grid.Column="0" 
                       Text="{Binding ExpanderIcon}"
                       FontSize="12"
                       TextColor="#E65100"
                       VerticalOptions="Center"
                       Margin="0,0,8,0" />

                                                <!-- Name + count -->
                                                <StackLayout Grid.Column="1" VerticalOptions="Center" Spacing="0">
                                                    <Label Text="{Binding Name}" 
                           FontSize="15" 
                           FontAttributes="Bold"
                           TextColor="#E65100" />
                                                    <Label Text="{Binding SubCategoryCountText}" 
                           FontSize="11"
                           TextColor="#999" />
                                                </StackLayout>

                                                <!-- Add Sub button -->
                                                <Button Grid.Column="2"
                        Text="+ Sub"
                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.AddSubCategoryCommand}"
                        CommandParameter="{Binding .}"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        FontSize="11"
                        CornerRadius="12"
                        Padding="10,4"
                        HeightRequest="28" />
                                            </Grid>

                                            <!-- Subcategories (visible when expanded) -->
                                            <StackLayout IsVisible="{Binding IsExpanded}"
                         BindableLayout.ItemsSource="{Binding SubCategories}"
                         Padding="30,0,10,10"
                         Spacing="4">
                                                <BindableLayout.ItemTemplate>
                                                    <DataTemplate>
                                                        <Frame Padding="10,8" CornerRadius="4" BackgroundColor="#FAFAFA" HasShadow="False">
                                                            <Label Text="{Binding Name}" FontSize="13" TextColor="#666" />
                                                        </Frame>
                                                    </DataTemplate>
                                                </BindableLayout.ItemTemplate>
                                            </StackLayout>

                                        </StackLayout>
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <BoxView HeightRequest="20" Color="Transparent" />
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>