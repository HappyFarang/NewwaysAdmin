<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NewwaysAdmin.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NewwaysAdmin.Mobile"
    xmlns:pages="clr-namespace:NewwaysAdmin.Mobile.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="NewwaysAdmin">

    <!-- Main Tab Bar -->
    <TabBar>
        <!-- Login Page (Initial) -->
        <ShellContent
            Title="Login"
            ContentTemplate="{DataTemplate pages:SimpleLoginPage}"
            Route="SimpleLoginPage" />

        <!-- Main Menu (Module Hub) -->
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate pages:MainMenuPage}"
            Route="MainMenuPage" />

        <!-- Category List Page -->
        <ShellContent
            Title="Categories"
            ContentTemplate="{DataTemplate pages:CategoryListPage}"
            Route="CategoryListPage" />
    </TabBar>

</Shell>