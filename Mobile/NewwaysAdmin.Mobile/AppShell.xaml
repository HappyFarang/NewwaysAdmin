<?xml version="1.0" encoding="UTF-8" ?>
<!-- File: Mobile/NewwaysAdmin.Mobile/AppShell.xaml -->
<Shell
    x:Class="NewwaysAdmin.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NewwaysAdmin.Mobile"
    xmlns:pages="clr-namespace:NewwaysAdmin.Mobile.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="NewwaysAdmin.Mobile">

    <!-- Login Page - Starting point -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:SimpleLoginPage}"
        Route="SimpleLoginPage" />

    <!-- Category Browser - Main landing page after login -->
    <ShellContent
        Title="Categories"
        ContentTemplate="{DataTemplate pages:CategoryBrowserPage}"
        Route="CategoryBrowserPage" />

    <!-- Home Page - Debug/Settings page -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="HomePage" />

</Shell>