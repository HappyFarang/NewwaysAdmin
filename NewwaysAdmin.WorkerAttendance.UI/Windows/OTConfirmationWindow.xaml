<!-- File: NewwaysAdmin.WorkerAttendance.UI/Windows/OTConfirmationWindow.xaml -->
<!-- Purpose: Confirmation dialog for overtime sign-in -->

<Window x:Class="NewwaysAdmin.WorkerAttendance.UI.Windows.OTConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ยืนยันลงเวลาทำงานล่วงเวลา" 
        Height="330" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="62"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Icon and Title -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Width="324" Height="58" VerticalAlignment="Top">
            <TextBlock Text="⏰" FontSize="40" Margin="0,0,5,0"/>
            <TextBlock Text="ยืนยันการทำงานล่วงเวลา" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"
                       Foreground="#FF6B35"/>
        </StackPanel>

        <!-- Worker Info and Question -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="118" Width="248">
            <TextBlock x:Name="WorkerNameText"
                       Text="ชื่อพนักงาน" 
                       FontSize="20" 
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"
                       Foreground="#333"/>

            <TextBlock Text="คุณต้องการลงเวลาทำงานล่วงเวลา" 
                       FontSize="18" 
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,5"
                       Foreground="#666"/>

            <TextBlock Text="ใช่หรือไม่?" 
                       FontSize="18" 
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Foreground="#666"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0" Width="260">
            <Button Content="ใช่ ยืนยัน" 
                    Click="YesButton_Click"
                    Width="120" 
                    Height="40"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Margin="0,0,15,0"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#4CAF50"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            Padding="10">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="ยกเลิก" 
                    Click="CancelButton_Click"
                    Width="120" 
                    Height="40"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Background="#757575"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand" HorizontalAlignment="Right">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#757575"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            Padding="10">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#616161"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>