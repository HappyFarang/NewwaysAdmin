<!-- File: NewwaysAdmin.WorkerAttendance.UI/MainWindow.xaml -->
<!-- Purpose: Main window for face scanning with clean component-based UI -->

<Window x:Class="NewwaysAdmin.WorkerAttendance.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:NewwaysAdmin.WorkerAttendance.UI.Controls"
        Title="Worker Attendance - Face Scanner" 
        Height="800" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header (Compact) -->
        <TextBlock Grid.Row="0" 
                   Text="Worker Attendance System" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Margin="10"/>

        <!-- Main content area with video feed -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Video feed area -->
            <Border Grid.Column="0" 
                    Background="Black" 
                    BorderBrush="Gray" 
                    BorderThickness="2">
                <Image x:Name="VideoFeed" 
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>

            <!-- Instructions panel -->
            <StackPanel Grid.Column="2" 
                        Background="LightGray" 
                        Margin="0">

                <!-- Dynamic Instructions Component -->
                <controls:InstructionsControl x:Name="Instructions"/>

                <!-- Worker Management Component (Normal Mode) -->
                <controls:WorkerManagementControl x:Name="WorkerManagement"
                                                  TrainWorkerRequested="OnTrainWorkerRequested"
                                                  ManageWorkersRequested="OnManageWorkersRequested"/>
                
                <Button Content="TEST SIGN IN" Click="TestSignIn_Click" Width="150" Height="40"/>
                <Button Content="TEST CONFIRM" Click="TestConfirm_Click" Width="150" Height="40"/>


                <!-- Worker Registration Component (Training Mode - Initially Hidden) -->
                <controls:WorkerRegistrationControl x:Name="WorkerRegistration"
                                                    Visibility="Collapsed"
                                                    StatusChanged="OnRegistrationStatusChanged"
                                                    WorkerSaved="OnWorkerSaved"
                                                    RegistrationCancelled="OnRegistrationCancelled"
                                                    FaceTrainingRequested="OnFaceTrainingRequested"/>

                <Rectangle Height="15" Fill="Transparent"/>

                <TextBlock x:Name="StateDisplay" 
                           Text="Ready" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           Margin="10,5"
                           Foreground="Green"/>
                <Rectangle Height="10" Fill="Transparent"/>
                <!-- Small spacer -->
                <controls:ActiveWorkersControl x:Name="ActiveWorkers"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>