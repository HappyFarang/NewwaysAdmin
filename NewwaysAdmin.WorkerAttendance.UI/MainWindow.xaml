<!-- File: NewwaysAdmin.WorkerAttendance.UI/MainWindow.xaml -->
<!-- Purpose: Main window for face scanning with live video feed display -->

<Window x:Class="NewwaysAdmin.WorkerAttendance.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Worker Attendance - Face Scanner" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Worker Attendance System" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="20"/>

        <!-- Main content area with video feed -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Video feed area -->
            <Border Grid.Column="0" 
                    Background="Black" 
                    BorderBrush="Gray" 
                    BorderThickness="2">
                <Image x:Name="VideoFeed" 
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>

            <!-- Instructions panel -->
            <StackPanel Grid.Column="2" 
           Background="LightGray" 
           Margin="0">
                <TextBlock Text="Instructions" 
              FontSize="16" 
              FontWeight="Bold" 
              Margin="10,10,10,5"/>

                <TextBlock Text="1. Press SIGN_IN button" 
              Margin="10,5"
              TextWrapping="Wrap"/>

                <TextBlock Text="2. Look at camera until face is detected" 
              Margin="10,5"
              TextWrapping="Wrap"/>

                <TextBlock Text="3. Press CONFIRM button" 
              Margin="10,5"
              TextWrapping="Wrap"/>

                <Rectangle Height="15" Fill="Transparent"/>

                <!-- Worker Management Section -->
                <TextBlock Text="Worker Management" 
              FontSize="14" 
              FontWeight="Bold" 
              Margin="10,5"/>

                <Button x:Name="TrainWorkerButton" 
            Content="Train New Worker" 
            Width="140" 
            Height="30" 
            Margin="10,5"
            Background="LightBlue" 
            Click="TrainWorkerButton_Click"/>

                <Button x:Name="ManageWorkersButton" 
            Content="Manage Workers" 
            Width="140" 
            Height="30" 
            Margin="10,5"
            Background="LightGreen" 
            Click="ManageWorkersButton_Click"/>

                <Rectangle Height="15" Fill="Transparent"/>

                <TextBlock x:Name="StateDisplay" 
              Text="Ready" 
              FontSize="14" 
              FontWeight="Bold" 
              Margin="10,5"
              Foreground="Green"/>
            </StackPanel>
        </Grid>

        <!-- Status bar -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    Background="DarkGray" 
                    Height="30">
            <TextBlock x:Name="StatusText" 
                       Text="Ready..." 
                       Margin="10,5" 
                       Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>