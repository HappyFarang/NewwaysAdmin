<!-- File: NewwaysAdmin.WorkerAttendance.UI/PasswordWindow.xaml -->
<!-- Purpose: Simple password prompt for admin access -->

<Window x:Class="NewwaysAdmin.WorkerAttendance.UI.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Access Required" 
        Height="250" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header text -->
        <TextBlock Grid.Row="0" 
                   Text="Enter admin password to continue:" 
                   FontSize="14" 
                   HorizontalAlignment="Center"/>

        <!-- Password input -->
        <PasswordBox x:Name="PasswordInput" 
                     Grid.Row="2"
                     Height="30"
                     FontSize="14"
                     HorizontalAlignment="Stretch"/>

        <!-- Error message placeholder -->
        <TextBlock x:Name="ErrorMessage" 
                   Grid.Row="3"
                   Text=""
                   Foreground="Red"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   Margin="0,5,0,0"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button x:Name="OkButton" 
                    Content="OK" 
                    Width="70" 
                    Height="30" 
                    Margin="0,0,10,0"
                    IsDefault="True"
                    Click="OkButton_Click"/>

            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="70" 
                    Height="30"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>