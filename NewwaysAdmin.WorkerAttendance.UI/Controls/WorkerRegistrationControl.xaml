<!-- File: NewwaysAdmin.WorkerAttendance.UI/Controls/WorkerRegistrationControl.xaml -->
<!-- Purpose: Reusable worker registration component -->

<UserControl x:Class="NewwaysAdmin.WorkerAttendance.UI.Controls.WorkerRegistrationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="White"
            BorderBrush="DarkBlue"
            BorderThickness="2"
            CornerRadius="5"
            Margin="5"
            Padding="10">

        <StackPanel>
            <!-- Registration Header -->
            <TextBlock Text="Register New Worker"
                       FontSize="13"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"
                       Foreground="DarkBlue"/>

            <!-- Worker Name Input -->
            <TextBlock Text="Worker Name:"
                       FontSize="11"
                       Margin="0,0,0,3"/>
            <TextBox x:Name="WorkerNameInput"
                     Height="22"
                     FontSize="11"
                     Margin="0,0,0,8"/>

            <!-- Face Scanning Section -->
            <TextBlock Text="Face Training:"
                       FontSize="11"
                       Margin="0,0,0,3"/>

            <Button x:Name="ScanFaceButton"
                    Content="Start Face Training"
                    Height="25"
                    FontSize="11"
                    Background="LightBlue"
                    Margin="0,0,0,5"
                    Click="ScanFaceButton_Click"/>

            <!-- Face Training Instructions -->
            <TextBlock x:Name="TrainingInstructions"
                       Text="Click 'Start Face Training' to begin"
                       FontSize="10"
                       Foreground="Gray"
                       TextWrapping="Wrap"
                       Margin="0,0,0,5"/>

            <!-- Face Training Status -->
            <TextBlock x:Name="TrainingStatus"
                       Text=""
                       FontSize="10"
                       Foreground="Blue"
                       TextWrapping="Wrap"
                       Margin="0,0,0,8"/>

            <!-- Save/Cancel Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button x:Name="SaveButton"
                        Content="Save Worker"
                        Width="80"
                        Height="25"
                        FontSize="11"
                        Background="LightGreen"
                        Margin="0,0,5,0"
                        Click="SaveButton_Click"/>

                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Width="60"
                        Height="25"
                        FontSize="11"
                        Background="LightCoral"
                        Click="CancelButton_Click"/>
            </StackPanel>

            <!-- Validation Message -->
            <TextBlock x:Name="ValidationMessage"
                       Text=""
                       FontSize="10"
                       Foreground="Red"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>
    </Border>
</UserControl>