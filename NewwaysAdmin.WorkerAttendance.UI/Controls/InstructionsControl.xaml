<!-- File: NewwaysAdmin.WorkerAttendance.UI/Controls/InstructionsControl.xaml -->
<!-- Purpose: Dynamic instructions that change based on application mode -->

<UserControl x:Class="NewwaysAdmin.WorkerAttendance.UI.Controls.InstructionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel>
        <!-- Instructions Header -->
        <TextBlock x:Name="InstructionsHeader"
                   Text="Instructions" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="10,10,10,5"/>

        <!-- Normal Mode Instructions -->
        <StackPanel x:Name="NormalInstructions" Visibility="Visible">
            <TextBlock Text="1. Press SIGN_IN button" 
                       Margin="10,5"
                       TextWrapping="Wrap"/>

            <TextBlock Text="2. Look at camera until face is detected" 
                       Margin="10,5"
                       TextWrapping="Wrap"/>

            <TextBlock Text="3. Press CONFIRM button" 
                       Margin="10,5"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Training Mode Instructions -->
        <StackPanel x:Name="TrainingInstructions" Visibility="Collapsed">
            <TextBlock Text="Training Mode: Registering New Worker" 
                       Margin="10,5"
                       FontWeight="Bold"
                       Foreground="DarkBlue"
                       TextWrapping="Wrap"/>

            <TextBlock x:Name="TrainingStepText"
                       Text="Follow the prompts in the registration panel below" 
                       Margin="10,5"
                       TextWrapping="Wrap"/>

            <TextBlock x:Name="CurrentTrainingInstruction"
                       Text=""
                       Margin="10,5"
                       FontStyle="Italic"
                       Foreground="Blue"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </StackPanel>
</UserControl>