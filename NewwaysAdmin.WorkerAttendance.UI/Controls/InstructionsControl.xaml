<!-- File: NewwaysAdmin.WorkerAttendance.UI/Controls/InstructionsControl.xaml -->
<!-- Purpose: Clean dynamic instructions that switches between modes -->

<UserControl x:Class="NewwaysAdmin.WorkerAttendance.UI.Controls.InstructionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:NewwaysAdmin.WorkerAttendance.UI.Controls">

    <StackPanel>
        <!-- Instructions Header -->
        <TextBlock x:Name="InstructionsHeader"
                   Text="Instructions" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="10,5,10,5"
                   HorizontalAlignment="Center"/>

        <!-- Normal Mode Instructions -->
        <StackPanel x:Name="NormalInstructions" Visibility="Visible">
            <TextBlock Text="1. Press SIGN_IN button" 
                       Margin="10,5"
                       TextWrapping="Wrap"/>

            <TextBlock Text="2. Look at camera until face is detected" 
                       Margin="10,5"
                       TextWrapping="Wrap"/>

            <TextBlock Text="3. Press CONFIRM button" 
                       Margin="10,5"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Training Mode Instructions -->
        <StackPanel x:Name="TrainingInstructions" Visibility="Collapsed">
            <TextBlock Text="Worker Registration" 
                       Margin="10,5"
                       FontWeight="Bold"
                       FontSize="14"
                       Foreground="DarkBlue"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"/>

            <!-- Basic Training Instructions (Before Face Training) -->
            <StackPanel x:Name="BasicTrainingInstructions" Visibility="Visible">
                <TextBlock Text="1. Enter worker name below" 
                           Margin="10,5"
                           TextWrapping="Wrap"/>

                <TextBlock Text="2. Click 'Start Face Training'" 
                           Margin="10,5"
                           TextWrapping="Wrap"/>

                <TextBlock Text="3. Follow face positioning steps" 
                           Margin="10,5"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Face Training Instructions (Only during face training) -->
            <StackPanel x:Name="FaceTrainingInstructionsPanel" Visibility="Collapsed">
                <controls:FaceTrainingInstructionsControl x:Name="FaceTrainingInstructions" Margin="5"/>
            </StackPanel>

            <!-- General Training Status -->
            <TextBlock x:Name="CurrentTrainingInstruction"
                       Text=""
                       Margin="10,5"
                       FontStyle="Italic"
                       Foreground="Blue"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </StackPanel>
</UserControl>