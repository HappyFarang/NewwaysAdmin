<!-- File: NewwaysAdmin.WorkerAttendance.UI/Controls/FaceTrainingInstructionsControl.xaml -->
<!-- Purpose: Standalone visual face training instructions component -->

<UserControl x:Class="NewwaysAdmin.WorkerAttendance.UI.Controls.FaceTrainingInstructionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel>
        <!-- Header -->
        <TextBlock Text="Face Training Steps" 
                   FontWeight="Bold"
                   FontSize="14"
                   Foreground="DarkBlue"
                   HorizontalAlignment="Center"
                   Margin="0"/>

        <!-- Progress Indicator -->
        <TextBlock x:Name="ProgressText"
                   Text="Step 1 of 4"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   Foreground="Gray"
                   Margin="0,1"/>

        <!-- Training Steps -->
        <StackPanel Margin="1">

            <!-- Step 1: Look Straight -->
            <Border x:Name="Step1Border" 
                    Background="LightBlue" 
                    BorderBrush="Blue" 
                    BorderThickness="2"
                    CornerRadius="5" 
                    Margin="0" 
                    Padding="0">
                <StackPanel HorizontalAlignment="Center">
                    <!-- Face Icon - Straight -->
                    <Image x:Name="FaceFrontIcon" 
                           Source="Assets/Icons/face_front.png" 
                           Width="64" 
                           Height="64" 
                           Margin="0,1"
                           RenderOptions.BitmapScalingMode="HighQuality"/>

                    <!-- Fallback if icon not found -->
                    <TextBlock x:Name="FaceFrontFallback"
                               Text="👤" 
                               FontSize="30" 
                               HorizontalAlignment="Center"
                               Visibility="Collapsed"/>

                    <TextBlock Text="Look Straight" 
                               FontSize="10" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Margin="0,1"/>

                    <Button x:Name="CaptureStep1Button"
                            Content="CAPTURE" 
                            Width="70" 
                            Height="22" 
                            Background="Orange"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="10"
                            Margin="0,0"
                            Click="CaptureStep1_Click"/>

                    <TextBlock x:Name="Step1Status" 
                               Text="" 
                               FontSize="9" 
                               Foreground="Green" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Step 2: Look Left -->
            <Border x:Name="Step2Border" 
                    Background="LightGray" 
                    BorderBrush="Gray" 
                    BorderThickness="1"
                    CornerRadius="5" 
                    Margin="0" 
                    Padding="1">
                <StackPanel HorizontalAlignment="Center">
                    <!-- Face Icon - Left -->
                    <Image x:Name="FaceLeftIcon" 
                           Source="Assets/Icons/face_left.png" 
                           Width="64" 
                           Height="64" 
                           Margin="0,2"
                           RenderOptions.BitmapScalingMode="HighQuality"/>

                    <!-- Fallback if icon not found -->
                    <TextBlock x:Name="FaceLeftFallback"
                               Text="👤←" 
                               FontSize="25" 
                               HorizontalAlignment="Center"
                               Visibility="Collapsed"/>

                    <TextBlock Text="Turn Left" 
                               FontSize="10" 
                               HorizontalAlignment="Center"
                               Margin="0,2"/>

                    <Button x:Name="CaptureStep2Button"
                            Content="CAPTURE" 
                            Width="70" 
                            Height="22" 
                            Background="LightGray"
                            FontSize="10"
                            IsEnabled="False"
                            Margin="0,0"
                            Click="CaptureStep2_Click"/>

                    <TextBlock x:Name="Step2Status" 
                               Text="" 
                               FontSize="9" 
                               Foreground="Green" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Step 3: Look Right -->
            <Border x:Name="Step3Border" 
                    Background="LightGray" 
                    BorderBrush="Gray" 
                    BorderThickness="1"
                    CornerRadius="5" 
                    Margin="0" 
                    Padding="1">
                <StackPanel HorizontalAlignment="Center">
                    <!-- Face Icon - Right -->
                    <Image x:Name="FaceRightIcon" 
                           Source="Assets/Icons/face_right.png" 
                           Width="64" 
                           Height="64" 
                           Margin="0,1"
                           RenderOptions.BitmapScalingMode="HighQuality"/>

                    <!-- Fallback if icon not found -->
                    <TextBlock x:Name="FaceRightFallback"
                               Text="👤→" 
                               FontSize="25" 
                               HorizontalAlignment="Center"
                               Visibility="Collapsed"/>

                    <TextBlock Text="Turn Right" 
                               FontSize="10" 
                               HorizontalAlignment="Center"
                               Margin="0,3"/>

                    <Button x:Name="CaptureStep3Button"
                            Content="CAPTURE" 
                            Width="70" 
                            Height="22" 
                            Background="LightGray"
                            FontSize="10"
                            IsEnabled="False"
                            Margin="0"
                            Click="CaptureStep3_Click"/>

                    <TextBlock x:Name="Step3Status" 
                               Text="" 
                               FontSize="9" 
                               Foreground="Green" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Step 4: Look Up -->
            <Border x:Name="Step4Border" 
                    Background="LightGray" 
                    BorderBrush="Gray" 
                    BorderThickness="1"
                    CornerRadius="5" 
                    Margin="0" 
                    Padding="1">
                <StackPanel HorizontalAlignment="Center">
                    <!-- Face Icon - Up -->
                    <Image x:Name="FaceUpIcon" 
                           Source="Assets/Icons/face_up.png" 
                           Width="64" 
                           Height="64" 
                           Margin="0,1"
                           RenderOptions.BitmapScalingMode="HighQuality"/>

                    <!-- Fallback if icon not found -->
                    <TextBlock x:Name="FaceUpFallback"
                               Text="👤↗" 
                               FontSize="25" 
                               HorizontalAlignment="Center"
                               Visibility="Collapsed"/>

                    <TextBlock Text="Look Up" 
                               FontSize="10" 
                               HorizontalAlignment="Center"
                               Margin="0,3"/>

                    <Button x:Name="CaptureStep4Button"
                            Content="CAPTURE" 
                            Width="70" 
                            Height="22" 
                            Background="LightGray"
                            FontSize="10"
                            IsEnabled="False"
                            Margin="0"
                            Click="CaptureStep4_Click"/>

                    <TextBlock x:Name="Step4Status" 
                               Text="" 
                               FontSize="9" 
                               Foreground="Green" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Current Instruction -->
        <TextBlock x:Name="CurrentInstruction"
                   Text="Position face in camera and click CAPTURE"
                   FontSize="10"
                   FontStyle="Italic"
                   Foreground="Blue"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="0"/>

        <!-- Completion Message -->
        <Border x:Name="CompletionBorder" 
                Background="LightGreen" 
                BorderBrush="Green" 
                BorderThickness="2"
                CornerRadius="5" 
                Margin="0,0" 
                Padding="0"
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center">
                <!-- Checkmark -->
                <Ellipse Width="25" Height="25" Fill="Green" Margin="0,3"/>
                <Polygon Points="8,12 12,16 18,8" Stroke="White" StrokeThickness="2" Fill="Transparent" 
                         Margin="0,-20,0,10"/>

                <TextBlock Text="Training Complete!" 
                           FontSize="11" 
                           FontWeight="Bold"
                           Foreground="DarkGreen"
                           HorizontalAlignment="Center"
                           Margin="0,0"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>